<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/selector_corner_radius"
                android:topRightRadius="@dimen/selector_corner_radius" />
            <solid android:color="@color/application_green" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/selector_corner_radius"
                android:topRightRadius="@dimen/selector_corner_radius" />
            <stroke android:width="1dp" android:color="@color/application_green"  />
        </shape>
    </item>
</selector>