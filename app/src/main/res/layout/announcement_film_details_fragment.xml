<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/film_details_padding">
            <com.kvest.odessatoday.ui.widget.RoundNetworkImageView
                xmlns:app="http://schemas.android.com/apk/res/com.kvest.odessatoday"
                android:id="@+id/film_poster"
                android:layout_width="@dimen/film_thumbnail_image_width"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/image_corner_radius"
                android:layout_marginRight="@dimen/film_thumbnail_margin_right"/>
            <TextView
                android:id="@+id/film_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_poster"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/film_name_text_size"
                android:textColor="?attr/FilmNameTextColor"/>
            <TextView
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_poster"
                android:layout_below="@id/film_name"
                android:textSize="@dimen/genre_text_size"
                android:textColor="?attr/GenreNameTextColor"/>
            <FrameLayout
                android:id="@+id/premiere_date_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_poster"
                android:layout_below="@id/genre">
                <TextView
                    android:id="@+id/premiere_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_premiere_date"
                    android:drawablePadding="4dip"
                    android:textColor="@color/premiere_date_text_color"
                    android:textSize="@dimen/premiere_date_text_size"
                    android:background="@drawable/premiere_date_bg"
                    android:padding="@dimen/premiere_date_padding"
                    android:layout_marginTop="@dimen/premiere_date_margin_top"
                    android:singleLine="true"
                    android:ellipsize="start"/>
            </FrameLayout>
            <RatingBar
                android:id="@+id/film_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_poster"
                android:layout_below="@id/premiere_date_container"
                android:numStars="5"
                android:stepSize="0.1"
                android:layout_marginTop="@dimen/announcement_ratingbar_margin_top"
                android:layout_marginBottom="@dimen/films_ratingbar_vertical_margin"
                style="@style/FilmsRatingBarTheme"
                android:isIndicator="true"/>
            <TextView
                android:id="@+id/comments_count"
                style="@style/CommentsCountLabel"
                android:layout_toRightOf="@id/film_rating"
                android:layout_below="@id/premiere_date_container"
                android:layout_marginTop="@dimen/announcement_comments_count_margin_top"
                android:layout_marginLeft="@dimen/films_comments_count_margin_left"/>
            <LinearLayout
                android:id="@+id/duration_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_poster"
                android:layout_below="@id/film_rating">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/film_duration_icon_margin_right"
                    android:src="@drawable/ic_film_duration" />
                <TextView
                    android:id="@+id/film_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/film_duration_text_size"
                    android:textColor="@color/film_duration_text_color" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingLeft="@dimen/film_details_padding"
            android:paddingRight="@dimen/film_details_padding"
            android:paddingBottom="6dip"
            android:paddingTop="6dip">
            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="4dip">
                <Button
                    android:id="@+id/show_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/green_button"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/film_details_button_text_size"
                    android:text="@string/comments_count"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:elevation="3dip"
                    android:layout_marginLeft="@dimen/film_details_button_icon_margin_left"
                    android:src="@drawable/ic_add_comment"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dip">
                <Button
                    android:id="@+id/tickets"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/green_button"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/film_details_button_text_size"
                    android:text="@string/tickets"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:elevation="3dip"
                    android:layout_marginLeft="@dimen/film_details_button_icon_margin_left"
                    android:src="@drawable/ic_arrow_tickets"/>
            </FrameLayout>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/film_details_padding"
            android:paddingRight="@dimen/film_details_padding">
            <LinearLayout
                android:id="@+id/images_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:id="@+id/youtube_fragment_container"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/film_details_posters_height"
                    android:layout_marginTop="@dimen/film_details_posters_margin"
                    android:layout_marginBottom="@dimen/film_details_posters_margin" />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/film_details_padding"
            android:layout_marginRight="@dimen/film_details_padding"
            android:layout_marginBottom="@dimen/film_details_director_padding"
            android:textSize="@dimen/film_details_director_text_size"
            android:textColor="@color/film_details_director_text_color"/>
        <TextView
            android:id="@+id/actors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/film_details_padding"
            android:layout_marginRight="@dimen/film_details_padding"
            android:layout_marginBottom="@dimen/film_details_actors_padding_bottom"
            android:textSize="@dimen/film_details_actors_text_size"
            android:textColor="@color/film_details_actors_text_color" />
        <com.kvest.odessatoday.ui.widget.ExpandablePanel
            xmlns:example="http://schemas.android.com/apk/res/com.kvest.odessatoday"
            android:id="@+id/expand_panel"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginBottom="10dip"
            example:handle="@+id/expand_description"
            example:content="@+id/film_description"
            example:collapsedHeight="@dimen/film_description_collapsed_height"
            example:animationDuration="300">
            <TextView
                android:id="@id/film_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/film_details_padding"
                android:layout_marginRight="@dimen/film_details_padding"
                android:layout_marginBottom="@dimen/film_details_description_padding_bottom"
                android:textSize="@dimen/film_details_description_text_size"
                android:textColor="@color/film_details_description_text_color"
                android:autoLink="all"
                android:linksClickable="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <View
                    android:layout_width="0dip"
                    android:layout_height="@dimen/film_expand_text_divider_height"
                    android:layout_weight="1"
                    android:background="@color/film_expand_text_divider_color"
                    android:layout_gravity="center_vertical" />
                <ImageButton
                    android:id="@+id/expand_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:minHeight="20dip"
                    android:src="@drawable/ic_expand_arrow" />
                <View
                    android:layout_width="0dip"
                    android:layout_height="@dimen/film_expand_text_divider_height"
                    android:layout_weight="1"
                    android:background="@color/film_expand_text_divider_color"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </com.kvest.odessatoday.ui.widget.ExpandablePanel>
    </LinearLayout>
</ScrollView>