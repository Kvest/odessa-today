<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_menu_subcategory_height"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/main_menu_item_horizontal_padding"
    android:paddingRight="@dimen/main_menu_item_horizontal_padding">
    <FrameLayout
        android:layout_width="@dimen/main_menu_subcategory_icon_size"
        android:layout_height="@dimen/main_menu_subcategory_icon_size">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/disable_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="?attr/MainMenuSubcategoryOverlayBg"
            android:textSize="@dimen/main_menu_subcategory_overlay_text_size"
            android:textColor="@color/main_menu_subcategory_overlay_text_color"
            android:text="@string/soon"/>
    </FrameLayout>
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/main_menu_subcategory_text_padding_left"
        android:textSize="@dimen/main_menu_subcategory_text_size"/>
</LinearLayout>