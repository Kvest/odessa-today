<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/white">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioGroup
                android:id="@+id/category_selector"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_selector_height"
                android:weightSum="3" >
            <RadioButton
                    android:id="@+id/timetable"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:background="@drawable/timetable_selector_bg"
                    style="@style/CategorySelectorRadioButton"
                    android:text="@string/timetable" />
            <RadioButton
                    android:id="@+id/cinemas"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/cinemas_selector_bg"
                    style="@style/CategorySelectorRadioButton"
                    android:text="@string/cinemas" />
            <RadioButton
                    android:id="@+id/announcements"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                android:background="@drawable/announcements_selector_bg"
                    style="@style/CategorySelectorRadioButton"
                    android:text="@string/announcements" />
        </RadioGroup>
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <FrameLayout
            android:id="@+id/calendar_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</FrameLayout>