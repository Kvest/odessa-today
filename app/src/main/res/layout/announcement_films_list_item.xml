<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/films_list_item_padding"
        android:paddingLeft="@dimen/films_list_item_padding"
        android:paddingBottom="@dimen/films_list_item_padding"
        android:paddingRight="@dimen/films_list_item_arrow_margin" >
        <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/film_image"
                android:layout_width="@dimen/film_thumbnail_image_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/film_thumbnail_margin_right"/>
        <ImageView
                android:id="@+id/arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/films_list_item_arrow_margin"
                android:src="@drawable/films_list_item_arrow" />
        <TextView
                android:id="@+id/film_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_image"
                android:layout_toLeftOf="@id/arrow_image"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/film_name_text_size"
                android:textColor="@color/films_name_text_color"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />
        <TextView
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_image"
                android:layout_toLeftOf="@id/arrow_image"
                android:layout_below="@id/film_name"
                android:textSize="@dimen/genre_text_size"
                android:textColor="@color/films_genre_text_color"/>
        <TextView
                android:id="@+id/premiere_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_image"
                android:layout_toLeftOf="@id/arrow_image"
                android:layout_below="@id/genre"
                android:textColor="@color/premiere_date_text_color"
                android:textSize="@dimen/premiere_date_text_size"
                android:textStyle="bold"
                android:background="@drawable/premiere_date_bg"
                android:padding="@dimen/premiere_date_padding"
                android:layout_marginTop="@dimen/premiere_date_margin_top"
                android:singleLine="true"
                android:ellipsize="start"/>
        <RatingBar
                android:id="@+id/film_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_image"
                android:layout_below="@id/premiere_date"
                android:numStars="5"
                android:stepSize="0.1"
                android:layout_marginTop="@dimen/films_ratingbar_margin_top"
                android:layout_marginBottom="@dimen/films_ratingbar_margin_bottom"
                style="@style/FilmsRatingBarTheme"
                android:isIndicator="true"/>
        <LinearLayout
                android:id="@+id/duration_and_comments_container"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/film_image"
                android:layout_toLeftOf="@id/arrow_image"
                android:layout_below="@id/film_rating">
                <ImageView
                        android:id="@+id/film_duration_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginRight="@dimen/film_duration_icon_margin_right"
                        android:src="@drawable/ic_film_duration" />
                <TextView
                        android:id="@+id/film_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginRight="@dimen/film_duration_margin_right"
                        android:textSize="@dimen/film_duration_text_size"
                        android:textColor="@color/film_duration_text_color" />
                <TextView
                        android:id="@+id/comments_count"
                        style="@style/CommentsCountLabel"
                        android:layout_gravity="top"
                        android:layout_marginRight="@dimen/comments_count_margin_right"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:textSize="@dimen/film_duration_text_size"
                        android:textColor="@color/film_duration_text_color"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@string/comments"/>
        </LinearLayout>
        <TextView
                android:id="@+id/is_premiere"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/premiere_label_padding"
                android:layout_marginTop="@dimen/premiere_label_margin_top"
                android:layout_toRightOf="@id/film_image"
                android:layout_below="@id/duration_and_comments_container"
                android:background="@color/premiere_label_bg"
                android:textColor="@color/premiere_label_text_color"
                android:textSize="@dimen/premiere_label_text_size"
                android:textStyle="bold"
                android:text="@string/premiere" />
</RelativeLayout>