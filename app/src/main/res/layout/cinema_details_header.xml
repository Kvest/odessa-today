<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/cinema_details_padding_top">
    <com.kvest.odessatoday.ui.widget.FontTextView
        android:id="@+id/cinema_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/cinema_details_padding"
        android:paddingRight="@dimen/cinema_details_padding"
        android:textSize="@dimen/cinema_name_text_size"
        android:textColor="?attr/CinemaNameTextColor"
        app:fontAsset="fonts/helveticaneuecyr-roman.ttf"/>
    <com.kvest.odessatoday.ui.widget.FontTextView
        android:id="@+id/cinema_phones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/cinema_details_padding"
        android:paddingRight="@dimen/cinema_details_padding"
        android:paddingTop="@dimen/cinema_details_phones_margin_top"
        android:drawablePadding="@dimen/cinema_details_phones_drawable_padding"
        android:drawableLeft="@drawable/ic_phone"
        android:textColor="@color/cinema_phones_text_color"
        android:textSize="@dimen/cinema_details_phones_text_size"
        app:fontAsset="fonts/helveticaneuecyr-roman.ttf"
        android:autoLink="phone"
        android:linksClickable="true"/>
    <com.kvest.odessatoday.ui.widget.FontTextView
        android:id="@+id/cinema_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/cinema_details_padding"
        android:drawableLeft="@drawable/ic_map_pin"
        android:layout_marginTop="@dimen/cinema_address_margin_top"
        android:drawablePadding="@dimen/cinema_details_address_drawable_padding"
        android:paddingLeft="@dimen/cinema_details_address_padding_left"
        android:textSize="@dimen/cinema_address_text_size"
        android:textColor="@color/cinema_address_text_color"
        app:fontAsset="fonts/helveticaneuecyr-roman.ttf"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="?attr/ActionsLayoutBg"
        android:paddingTop="@dimen/actions_layout_vertical_padding"
        android:paddingBottom="@dimen/actions_layout_vertical_padding"
        android:layout_marginTop="@dimen/cinema_details_actions_margin_top"
        android:layout_marginBottom="@dimen/cinema_details_actions_margin_bottom">
        <include
            layout="@layout/action_comments"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1" />
        <include
            layout="@layout/action_gallery"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1" />
        <include
            layout="@layout/action_map"
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1" />
    </LinearLayout>
    <com.kvest.odessatoday.ui.widget.FontTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/cinema_details_padding"
        android:paddingRight="@dimen/cinema_details_padding"
        android:textSize="@dimen/cinema_description_text_size"
        android:textColor="?attr/CinemaDetailsDescriptionTextColor"
        app:fontAsset="fonts/helveticaneuecyr-roman.ttf"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cinema_details_date_divider_height"
        android:layout_marginLeft="@dimen/cinema_details_padding"
        android:layout_marginRight="@dimen/cinema_details_padding"
        android:layout_marginTop="@dimen/cinema_details_date_margin_top"
        android:background="?attr/CinemaDetailsDateDividerColor" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cinema_details_date_height"
        android:paddingLeft="@dimen/cinema_details_padding"
        android:paddingRight="@dimen/cinema_details_padding">
        <ImageView
            android:id="@+id/show_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/calendar_day"
            android:scaleType="center"
            android:tint="?attr/CinemaDetailsCalendarColor"
            android:background="?attr/CinemaDetailsCalendarBg"/>
        <com.kvest.odessatoday.ui.widget.FontTextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/show_calendar"
            android:textColor="?attr/CinemaDetailsDateTextColor"
            app:fontAsset="fonts/helveticaneuecyr-roman.ttf"
            android:textSize="@dimen/cinema_details_date_text_size"
            android:singleLine="true"
            android:ellipsize="end"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/cinema_details_date_divider_height"
        android:layout_marginLeft="@dimen/cinema_details_padding"
        android:layout_marginRight="@dimen/cinema_details_padding"
        android:layout_marginBottom="@dimen/cinema_details_date_margin_bottom"
        android:background="?attr/CinemaDetailsDateDividerColor" />
    <include
        layout="@layout/no_films_label"/>
</LinearLayout>