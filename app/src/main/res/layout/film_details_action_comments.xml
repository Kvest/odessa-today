<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.kvest.odessatoday.ui.widget.CommentsCountView
        android:id="@+id/action_comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/FilmDetailsActionBg"
        android:textColor="@color/application_green"
        app:fontAsset="fonts/helveticaneuecyr-bold.ttf"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/film_details_action_comments_count_text_size"/>
    <com.kvest.odessatoday.ui.widget.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:fontAsset="fonts/helveticaneuecyr-roman.ttf"
        android:layout_marginTop="@dimen/film_details_action_name_padding_top"
        android:textSize="@dimen/film_details_action_name_text_size"
        android:textColor="?attr/FilmDetailsActionNameTextColor"
        android:text="@string/film_details_action_comments"/>
</LinearLayout>