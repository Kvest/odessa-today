<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/film_details_padding"
        android:layout_marginRight="@dimen/film_details_padding"
        android:layout_marginBottom="@dimen/film_details_director_padding_bottom">
        <TextView
            android:layout_width="@dimen/film_details_role_name_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/film_details_description_text_size"
            android:textColor="?attr/FilmDetailsRoleTitleTextColor"
            android:text="@string/film_director"/>
        <TextView
            android:id="@+id/director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/film_details_description_text_size"
            android:textColor="@color/film_details_role_text_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/film_details_padding"
        android:layout_marginRight="@dimen/film_details_padding"
        android:layout_marginBottom="@dimen/film_details_actors_padding_bottom">
        <TextView
            android:layout_width="@dimen/film_details_role_name_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/film_details_description_text_size"
            android:textColor="?attr/FilmDetailsRoleTitleTextColor"
            android:text="@string/film_actors"/>
        <TextView
            android:id="@+id/actors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/film_details_description_text_size"
            android:textColor="@color/film_details_role_text_color" />
    </LinearLayout>
    <TextView
        android:id="@+id/film_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/film_details_padding"
        android:layout_marginRight="@dimen/film_details_padding"
        android:layout_marginBottom="@dimen/film_details_description_padding_bottom"
        android:textSize="@dimen/film_details_description_text_size"
        android:textColor="?attr/FilmDetailsDescriptionTextColor"
        android:autoLink="all"
        android:linksClickable="true"/>
</merge>