<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Application style-->
    <style name="OdessaTodayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/OdessaTodayActionBar</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="homeAsUpIndicator">@drawable/ic_ab_back_white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OdessaTodayTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="MainActivityTheme" parent="OdessaTodayTheme">
        <item name="homeAsUpIndicator">@drawable/ic_navigation_drawer</item>
    </style>

    <!-- ActionBar styles -->
    <style name="OdessaTodayActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/application_green</item>
        <!--Hide app icon-->
        <item name="android:displayOptions">showTitle</item>
    </style>

    <!--Films rating-->
    <style name="FilmsRatingBarTheme" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/films_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/films_ratingbar</item>
        <item name="android:minHeight">@dimen/films_ratingbar_min_height</item>
    </style>

    <style name="CommentsCountLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/comments_count_height</item>
        <item name="android:minWidth">@dimen/comments_count_min_width</item>
        <item name="android:paddingLeft">@dimen/comments_count_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/comments_count_horizontal_padding</item>
        <item name="android:background">@drawable/comments_count_bg</item>
        <item name="android:textColor">@color/comments_count_text_color</item>
        <item name="android:textSize">@dimen/comments_count_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CategorySelectorRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton" >
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/category_selector_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/category_selector_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WeekDayNameStyle" parent="android:Widget.TextView" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/week_day_name_text_color</item>
        <item name="android:textSize">@dimen/calendar_days_text_size</item>
    </style>
</resources>