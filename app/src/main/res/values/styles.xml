<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Application style-->
    <style name="BaseOdessaTodayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/OdessaTodayActionBar</item>
        <item name="android:windowBackground">?attr/MainBGColor</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
        <item name="textAllCaps">false</item>
        <item name="popupMenuStyle">@style/DatePopupMenu</item>
    </style>

    <style name="OdessaTodaySplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="OdessaTodayTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ToolBarStyle.OdessaToday" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/OdessaTodayActionBar</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.OdessaToday.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.OdessaToday.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/TitleTextColor</item>
    </style>

    <!-- ActionBar styles -->
    <style name="OdessaTodayActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/application_green</item>
        <item name="colorControlNormal">?attr/ABIconColor</item>
        <!--Hide app icon-->
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="RatingBarTheme" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">?attr/FilmsRatingBar</item>
        <item name="android:indeterminateDrawable">?attr/FilmsRatingBar</item>
        <item name="android:minHeight">@dimen/films_ratingbar_min_height</item>
    </style>

    <style name="CommentsCountLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/comments_count_bg</item>
        <item name="android:textColor">?attr/CommentsCountTextColor</item>
        <item name="android:textSize">@dimen/comments_count_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CinemaCommentsCountLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/cinemas_list_comments_count_bg</item>
        <item name="android:textColor">@color/cinemas_list_comments_count_text_color</item>
        <item name="android:textSize">@dimen/cinemas_list_comments_count_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CategorySelectorRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton" >
        <item name="android:button">@null</item>
        <item name="android:textColor">?attr/SelectorTextColor</item>
        <item name="android:textSize">@dimen/category_selector_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WeekDayNameStyle" parent="android:Widget.TextView" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/CalendarWeekDaysNameTextColor</item>
        <item name="android:textSize">@dimen/calendar_week_days_name_text_size</item>
    </style>

    <style name="GradientButtonLabelStyle" parent="android:Widget.TextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/gradient_button_text_size</item>
        <item name="android:drawablePadding">12dip</item>
    </style>

    <style name="TodayEditText" parent="android:Widget.EditText">
        <item name="android:background">?attr/EditTextBg</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <style name="CommentRatingRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/comment_rating_text_size</item>
        <item name="android:textColor">?attr/CommentRatingTextColor</item>
        <item name="android:button">@null</item>
        <item name="android:background">?attr/CommentRatingBg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProgressDialogTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoEventsStyle" parent="android:Widget.TextView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/NoEventLabelTextColor</item>
        <item name="android:textSize">@dimen/no_event_label_text_size</item>
        <item name="android:padding">@dimen/no_event_label_padding</item>
    </style>

    <style name="DatePopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/application_green</item>
        <item name="android:textColor">?attr/DatePopupMenuTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>