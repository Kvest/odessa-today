<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/comments_list_item_padding">
    <TextView
        android:id="@+id/comment_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/comment_author_name_text_size"
        android:textColor="@color/comment_author_name_text_color"/>
    <TextView
        android:id="@+id/comment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/comment_date_text_size"
        android:textColor="@color/comment_date_text_color"/>
    <TextView
        android:id="@+id/comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_text_top_margin"
        android:textSize="@dimen/comment_text_text_size"
        android:textColor="@color/comment_text_text_color"
        android:autoLink="all"
        android:linksClickable="true"/>
</LinearLayout>