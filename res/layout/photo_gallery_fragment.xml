<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.kvest.odessatoday.ui.widget.PagerIndicator
        xmlns:custom="http://schemas.android.com/apk/res/com.kvest.odessatoday"
        android:id="@+id/pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/pager_indicator_vertical_margin"
        android:layout_marginBottom="@dimen/pager_indicator_vertical_margin"
        custom:margin_between_circles="@dimen/pager_indicator_margin_between_circles"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/images_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pager_indicator"/>
</RelativeLayout>