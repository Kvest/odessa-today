<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/cinema_details_padding"
    android:paddingRight="@dimen/cinema_details_padding"
    android:weightSum="3"
    android:baselineAligned="false">
    <LinearLayout
        android:id="@+id/timetable_item_container1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="@dimen/cinema_details_row_item_margin"
        android:layout_marginBottom="@dimen/cinema_details_row_item_margin"
        android:paddingTop="@dimen/cinema_details_row_item_vertical_padding"
        android:paddingBottom="@dimen/cinema_details_row_item_vertical_padding"
        android:background="@drawable/timetable_row_first_item_bg">
        <TextView
            android:id="@+id/date1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/cinema_details_row_date_margin_right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/cinema_details_row_date_text_size"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/format1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/cinema_details_row_format_text_size"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/prices1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/cinema_details_row_prices_text_size"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/timetable_item_container2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="@dimen/cinema_details_row_item_margin"
        android:layout_marginBottom="@dimen/cinema_details_row_item_margin"
        android:paddingTop="@dimen/cinema_details_row_item_vertical_padding"
        android:paddingBottom="@dimen/cinema_details_row_item_vertical_padding"
        android:background="@drawable/timetable_row_second_item_bg">
        <TextView
            android:id="@+id/date2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/cinema_details_row_date_margin_right"
            android:textColor="@color/cinema_details_row_date2_text_color"
            android:textSize="@dimen/cinema_details_row_date_text_size"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/format2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="@dimen/cinema_details_row_format_text_size"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/prices2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textSize="@dimen/cinema_details_row_prices_text_size"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/timetable_item_container3"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/cinema_details_row_item_margin"
        android:paddingTop="@dimen/cinema_details_row_item_vertical_padding"
        android:paddingBottom="@dimen/cinema_details_row_item_vertical_padding"
        android:background="@drawable/timetable_row_third_item_bg">
        <TextView
            android:id="@+id/date3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/cinema_details_row_date_margin_right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/cinema_details_row_date_text_size"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/format3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/cinema_details_row_format_text_size"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/prices3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/cinema_details_row_prices_text_size"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>