<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/calendar_header_height"
        android:background="@color/calendar_header_bg" >
        <Button
            android:id="@+id/button_previous"
            android:layout_width="@dimen/calendar_navigation_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/button_next"
            android:layout_width="@dimen/calendar_navigation_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/shown_month_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/calendar_shown_month_text_color"
            android:textSize="@dimen/calendar_shown_month_text_size"
            android:layout_toRightOf="@id/button_previous"
            android:layout_toLeftOf="@id/button_next" />
    </RelativeLayout>
    <GridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:numColumns="7"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp"
        android:stretchMode="columnWidth"

        android:gravity="center" />
</LinearLayout>