<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/film_details_padding"
        android:background="@android:color/white">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/film_poster"
            android:layout_width="@dimen/film_thumbnail_image_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/film_details_poster__margin_right" />
        <TextView
            android:id="@+id/film_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/film_name_text_size"
            android:textColor="@color/films_name_text_color"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_below="@id/film_name"
            android:textSize="@dimen/genre_text_size"
            android:textColor="@color/films_genre_text_color"/>
        <RatingBar
            android:id="@+id/film_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_below="@id/genre"
            android:numStars="5"
            android:stepSize="0.1"
            android:layout_marginTop="@dimen/films_ratingbar_margin_top"
            android:layout_marginBottom="@dimen/films_ratingbar_margin_bottom"
            style="@style/FilmsRatingBarTheme"
            android:isIndicator="true"/>
        <LinearLayout
            android:id="@+id/duration_and_comments_container"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_poster"
            android:layout_below="@id/film_rating">
            <ImageView
                android:id="@+id/film_duration_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="@dimen/film_duration_icon_margin_right"
                android:src="@drawable/ic_film_duration" />
            <TextView
                android:id="@+id/film_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginRight="@dimen/film_duration_margin_right"
                android:textSize="@dimen/film_duration_text_size"
                android:textColor="@color/film_duration_text_color" />
            <TextView
                android:id="@+id/comments_count"
                style="@style/CommentsCountLabel"
                android:layout_gravity="top"
                android:layout_marginRight="@dimen/comments_count_margin_right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="@dimen/film_duration_text_size"
                android:textColor="@color/film_duration_text_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/comments"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/min_max_prices_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_max_prices_icon_margin_top"
            android:layout_marginRight="@dimen/min_max_prices_icon_margin_right"
            android:layout_toRightOf="@id/film_poster"
            android:layout_below="@id/duration_and_comments_container"
            android:src="@drawable/ic_cash"/>
        <TextView
            android:id="@+id/min_max_prices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/min_max_prices_icon"
            android:layout_alignTop="@id/min_max_prices_icon"
            android:layout_alignBottom="@id/min_max_prices_icon"
            android:textSize="@dimen/min_max_prices_text_size"
            android:textColor="@color/min_max_prices_text_color"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/film_details_divider_height"
        android:background="@color/film_details_divider_color" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/film_details_padding"
        android:paddingRight="@dimen/film_details_padding">
        <LinearLayout
            android:id="@+id/posters_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/youtube_fragment_container"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/film_details_posters_height"
                android:layout_marginTop="@dimen/film_details_posters_margin"
                android:layout_marginBottom="@dimen/film_details_posters_margin"
                android:layout_marginRight="@dimen/film_details_posters_margin" />
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/film_details_divider_height"
        android:background="@color/film_details_divider_color" />
    <TextView
        android:id="@+id/director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/film_details_padding"
        android:layout_marginRight="@dimen/film_details_padding"
        android:layout_marginTop="@dimen/film_details_director_padding"
        android:layout_marginBottom="@dimen/film_details_director_padding"
        android:textSize="@dimen/film_details_director_text_size"/>
    <TextView
        android:id="@+id/actors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/film_details_padding"
        android:layout_marginRight="@dimen/film_details_padding"
        android:layout_marginBottom="@dimen/film_details_actors_padding_bottom"
        android:textSize="@dimen/film_details_actors_text_size" />
    <com.kvest.odessatoday.ui.widget.ExpandablePanel
        xmlns:example="http://schemas.android.com/apk/res/com.kvest.odessatoday"
        android:id="@+id/expand_panel"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        example:handle="@+id/expand_description"
        example:content="@+id/film_description"
        example:collapsedHeight="@dimen/film_description_collapsed_height"
        example:animationDuration="300">
        <TextView
            android:id="@id/film_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/film_details_padding"
            android:layout_marginRight="@dimen/film_details_padding"
            android:layout_marginBottom="@dimen/film_details_description_padding_bottom"
            android:textSize="@dimen/film_details_description_text_size"
            android:autoLink="all"
            android:linksClickable="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/film_details_divider_height"
                android:layout_weight="1"
                android:background="@color/film_details_divider_color"
                android:layout_gravity="center_vertical" />
            <ImageButton
                android:id="@+id/expand_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:minHeight="20dip"
                android:src="@drawable/expand_arrow" />
            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/film_details_divider_height"
                android:layout_weight="1"
                android:background="@color/film_details_divider_color"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </com.kvest.odessatoday.ui.widget.ExpandablePanel>
    <RelativeLayout
        android:id="@+id/comments_count_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/film_details_comments_count_height"
        android:layout_marginLeft="@dimen/film_details_padding"
        android:layout_marginRight="@dimen/film_details_padding">
        <TextView
            android:id="@+id/comments_count_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/film_details_comments_count_text_size"
            android:text="@string/comments" />
        <TextView
            android:id="@+id/comments_count_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/film_details_comments_count_margin_left"
            android:textSize="@dimen/film_details_comments_count_text_size"
            android:textColor="@color/film_details_comments_count_text_color"
            android:layout_toRightOf="@id/comments_count_label" />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_arrow_details"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/timetable_date"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/timetable_date_padding_horizontal"
        android:paddingRight="@dimen/timetable_date_padding_horizontal"
        android:paddingTop="@dimen/timetable_date_padding_vertical"
        android:paddingBottom="@dimen/timetable_date_padding_vertical"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/timetable_date_text_size"
        android:textStyle="bold"
        android:background="@color/timetable_date_bg" />
</LinearLayout>